<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11171E"
    tools:context=".MenuActivity">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/radius_menu"
        android:backgroundTint="#4A2C18"
        android:elevation="50dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:onClick="educationInfo"
        android:text="Uddannelser"

        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.26" />

    <Button
        android:id="@+id/backToMainBtn"
        android:layout_width="88dp"
        android:layout_height="59dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#11171E"
        android:onClick="backToMain"
        android:text="Tilbage"
        android:textColor="@color/white"
        android:textSize="8dp"
        app:iconTint="#6C3737"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#11171E" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_menu"
        android:backgroundTint="#4A2C18"
        android:clickable="true"
        android:elevation="100dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:onClick="InterestInfo"

        android:text="Studieretninger"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="675dp"
        android:layout_height="376dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baggrund2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="383dp"
        android:layout_height="83dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="Hvad vil du blive klogere pÃ¥?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>